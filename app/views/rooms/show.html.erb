<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>



<h3>Bookings</h3>
<ul>
	<% @room.bookings.each do |booking| %>
		<li><%= booking.start_date %> - <%= booking.end_date %></li>
	<% end %>
</ul>


<h3>Book this room</h3>
<%= form_for([@room, @booking]) do |f| %>
	<%= f.label :start_date %> <br>
	<%= f.date_select :start_date, order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year + 1 %> <br>

	<%= f.label :end_date %>
	<%= f.date_select :end_date, order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year + 1 %><br>

	<%= f.submit "Check availability & confirm" %> or <%= link_to "See discounts", new_room_booking_path(@room) %>
<% end %>



<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
