  <tr>
    <th></th>
    <th>User</th>
    <th>Review</th>
  </tr>
  <% reviews["user_reviews"].each do |review| %>
    <tr>
      <td><%= image_tag(review["review"]["user"]["profile_image"]) %></td>
      <td><%= review["review"]["user"]["name"] %></td>
      <td>Rated : <%= review["review"]["rating"] %> (written <%= review["review"]["review_time_friendly"] %>) <br> <%= review["review"]["review_text"] %></td>
