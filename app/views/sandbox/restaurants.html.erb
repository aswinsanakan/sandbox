<h2>ZOMATO</h2>
<%= image_tag(restaurant["thumb"]) %> <br>
<h2><%= restaurant["name"] %></h2>
<p>(<%= restaurant["location"]["locality"] %>)</p>

<h3><%= link_to "Visit", restaurant["url"] %> || <%= link_to "Photos", restaurant["photos_url"] %> || <%= link_to "Menu", restaurant["menu_url"] %> || <%= link_to "Book", restaurant["book_url"] %> || <%= link_to "Events", restaurant["events_url"] %></h3>

<table border="1" width=50%>
	<tr>
		<th>Overview</th> 
		<th>Address</th>
		<th>Reviews</th>
	</tr>
	<tr>
		<td>
			<b>Cuisines : </b> 
			<% restaurant["cuisines"].split(" ").each do |cuisine| %>
				<%= cuisine %> <br>
			<% end %> <br>
			<b>Cost for two : </b>
			<%= restaurant["average_cost_for_two"] %>
		</td>
		<td>
			<% restaurant["location"]["address"].split(",").each do |address| %>
				<%= address %>, <br>
			<% end %>
		</td>
		<td><b>Rating : </b> 
			<%= restaurant["user_rating"]["aggregate_rating"] %> <br> <br>
			<b>Feedback : </b>
			<%= restaurant["user_rating"]["rating_text"] %> <br> <br>
			<b>Number of votes : </b>
			<%= restaurant["user_rating"]["votes"] %>
		</td>
	</tr>
</table>


<h3>Reviews</h3>
